<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aef_cat_layout"
    android:layout_width="@dimen/cat_icon_holder_size"
    android:layout_height="@dimen/cat_icon_holder_size">

    <ImageView
        android:id="@+id/aef_cat_icon"
        android:layout_width="@dimen/cat_icon_size"
        android:layout_height="@dimen/cat_icon_size"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/aef_cat_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@drawable/icon_bank" />

    <TextView
        android:id="@+id/aef_cat_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aef_cat_icon"
        app:layout_constraintVertical_chainStyle="packed" />
</android.support.constraint.ConstraintLayout>