<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sci_layout"
    android:layout_width="150sp"
    android:layout_height="wrap_content"
    android:padding="8sp">

    <ImageView
        android:id="@+id/sci_icon"
        android:layout_width="@dimen/select_cat_icon_size"
        android:layout_height="@dimen/select_cat_icon_size"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/sci_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/sci_text"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sci_icon" />
</android.support.constraint.ConstraintLayout>